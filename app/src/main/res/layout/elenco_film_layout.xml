<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_singoloFilm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="8dp"
    android:elevation="2dp"
    android:background="@drawable/rounded_background">

    <ImageView
        android:id="@+id/imageView_fotoCopertina"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_nomeFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome film"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_valutazione" />

    <TextView
    android:id="@+id/textView_valutazione"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:elevation="4dp"
    android:textColor="@color/colorWhiteBackground"
    android:padding="8dp"
    android:text="7.5"
    android:textStyle="bold"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="@+id/imageView_fotoCopertina"
    app:layout_constraintStart_toStartOf="@+id/imageView_fotoCopertina"
    app:layout_constraintTop_toBottomOf="@+id/imageView_fotoCopertina" />

    <TextView
        android:id="@+id/textView_dataRilascio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="01/01/2020"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nomeFilm" />

</androidx.constraintlayout.widget.ConstraintLayout>